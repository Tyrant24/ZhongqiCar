<view class='white-block'>
  <view wx:for="{{items}}" wx:key="k" wx:for-index="idx" id="{{idx}}" class='border-bottom padding-20' bindtap='locationSelect'>
    <view>{{item.title}}</view>
    <view class='h6 txt-gray'>{{item.address}}</view>
  </view>
</view>